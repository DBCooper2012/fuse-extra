<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>fabric-apollo-project</artifactId>
    <groupId>org.fusesource.fabric.apollo</groupId>
    <version>1.2-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <groupId>org.fusesource.fabric.apollo</groupId>
  <artifactId>fabric-apollo-amqp-example</artifactId>
  <name>${project.artifactId}</name>
  <version>1.2-SNAPSHOT</version>
  <packaging>jar</packaging>

  <dependencies>

    <dependency>
      <groupId>org.fusesource.fabric.apollo</groupId>
      <artifactId>fabric-apollo-amqp-protocol</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.fusesource.fabric.apollo</groupId>
      <artifactId>fabric-apollo-amqp-codec</artifactId>
      <version>1.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j-version}</version>
    </dependency>

  </dependencies>

  <properties>
    <transport>tcp</transport>
    <count>1</count>
    <address>queue:test</address>
    <port>5672</port>
    <hostname>localhost</hostname>
    <settled>false</settled>
    <batch_size>10</batch_size>
  </properties>

  <profiles>
    <profile>
      <id>send</id>
      <build>
        <defaultGoal>test</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <configuration>
                  <mainClass>org.fusesource.fabric.apollo.amqp.example.simple.Send</mainClass>
                  <arguments>
                    <argument>--count=${count}</argument>
                    <argument>--batch_size=${batch_size}</argument>
                    <argument>--address=${address}</argument>
                    <argument>--port=${port}</argument>
                    <argument>--hostname=${hostname}</argument>
                    <argument>--settled=${settled}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>batch_send</id>
      <build>
        <defaultGoal>test</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <configuration>
                  <mainClass>org.fusesource.fabric.apollo.amqp.example.simple.BatchSend</mainClass>
                  <arguments>
                    <argument>--count=${count}</argument>
                    <argument>--batch_size=${batch_size}</argument>
                    <argument>--address=${address}</argument>
                    <argument>--port=${port}</argument>
                    <argument>--hostname=${hostname}</argument>
                    <argument>--settled=${settled}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>receive</id>
      <build>
        <defaultGoal>test</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <phase>test</phase>
                <goals>
                  <goal>java</goal>
                </goals>
                <configuration>
                  <mainClass>org.fusesource.fabric.apollo.amqp.example.simple.Receive</mainClass>
                  <arguments>
                    <argument>--count=${count}</argument>
                    <argument>--batch_size=${batch_size}</argument>
                    <argument>--address=${address}</argument>
                    <argument>--port=${port}</argument>
                    <argument>--hostname=${hostname}</argument>
                    <argument>--settled=${settled}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
